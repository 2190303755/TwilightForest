{
  "format_version": "1.16.100",
  "minecraft:block": {
    "description": {
      "identifier": "twilightforest:mangrove_log",
      "properties": {
        "minecraft:direction": {}
      }
    },
    "permutations": [
      {
        "condition": "query.block_property('minecraft:direction') == 0",
        "components": {
          "minecraft:rotation": [ 0, 0, 0 ],
          "minecraft:map_color": "#6e5c3c"
        }
      },
      {
        "condition": "query.block_property('minecraft:direction') == 1",
        "components": {
          "minecraft:rotation": [ 90, 0, 0 ],
          "minecraft:map_color": "#644228"
        }
      },
      {
        "condition": "query.block_property('minecraft:direction') == 2",
        "components": {
          "minecraft:rotation": [ 0, 0, 90 ],
          "minecraft:map_color": "#644228"
        }
      }
    ],
    "components": {
      "minecraft:destroy_time": 3,
      "minecraft:block_light_absorption": 15,
      "minecraft:block_light_emission": 0,
      "minecraft:friction": 0.6,
      "minecraft:explosion_resistance": 2,
      "minecraft:unit_cube": {},
      "minecraft:material_instances": {
        "*": {
          "texture": "mangrove_log_side",
          "render_method": "opaque"
        },
        "up": {
          "texture": "mangrove_log_top",
          "render_method": "opaque"
        },
        "down": {
          "texture": "mangrove_log_top",
          "render_method": "opaque"
        }
      },
      "minecraft:on_player_placing": {
        "event": "minecraft:on_player_placing",
        "target": "self"
      },
      "minecraft:on_interact": {
        "condition": "query.equipped_item_any_tag('slot.weapon.mainhand','minecraft:is_axe')",
        "event": "minecraft:on_interact",
        "target": "self"
      },
      "tag:log": {},
      "tag:wood": {}
    },
    "events": {
      "minecraft:on_player_placing": {
        "set_block_property": {
          "minecraft:direction": "math.floor(query.block_face / 2)"
        }
      },
      "minecraft:on_interact": {
        "sequence": [
          {
            "damage": {
              "amount": 1,
              "target": "item",
              "type": "durability"
            },
            "swing": {}
          },
          {
            "condition": "query.block_property('minecraft:direction')==0",
            "set_block": {
              "block_type": {
                "name": "twilightforest:stripped_mangrove_log",
                "states": {
                  "direction": 0
                }
              }
            }
          },
          {
            "condition": "query.block_property('minecraft:direction')==1",
            "set_block": {
              "block_type": {
                "name": "twilightforest:stripped_mangrove_log",
                "states": {
                  "direction": 1
                }
              }
            }
          },
          {
            "condition": "query.block_property('minecraft:direction')==2",
            "set_block": {
              "block_type": {
                "name": "twilightforest:stripped_mangrove_log",
                "states": {
                  "direction": 2
                }
              }
            }
          }
        ]
      }
    }
  }
}