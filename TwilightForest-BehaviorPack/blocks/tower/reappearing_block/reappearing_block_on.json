{
  "format_version": "1.16.100",
  "minecraft:block": {
    "description": {
      "identifier": "twilightforest:reappearing_block_on"
    },
    "components": {
      "minecraft:destroy_time": 3,
      "minecraft:block_light_absorption": 15,
      "minecraft:block_light_emission": 0,
      "minecraft:map_color": "#ffffff",
      "minecraft:explosion_resistance": 6,
      "minecraft:ticking": {
        "range": [0.25,0.25],
        "on_tick": {
          "event": "twilightforest:on_ticking",
          "target": "self"
        }
      },
      "minecraft:on_placed": {
        "event": "minecraft:on_placed"
      }
    },
    "events":{
      "twilightforest:on_ticking": {
        "set_block_at_pos": {
          "block_type": "twilightforest:reappearing_trace_block_off",
          "block_offset": [ 0, 0, 0 ]
        }
      },
      "minecraft:on_placed": {
        "run_command": {
          "command": [
            "fill ~-1 ~ ~ ~1 ~ ~ twilightforest:reappearing_block_on 0 replace twilightforest:reappearing_block_off",
            "fill ~ ~-1 ~ ~ ~1 ~ twilightforest:reappearing_block_on 0 replace twilightforest:reappearing_block_off",
            "fill ~ ~ ~-1 ~ ~ ~1 twilightforest:reappearing_block_on 0 replace twilightforest:reappearing_block_off"
          ]
        }
      }
    }
  }
}