{
  "format_version": "1.16.100",
  "minecraft:block": {
    "description": {
      "identifier": "twilightforest:aurora_pillar",
      "properties": {
        "minecraft:direction": {}
      }
    },
    "permutations": [
      {
        "condition": "query.block_property('minecraft:direction') == 0",
        "components": {
          "minecraft:rotation": [ 0, 0, 0 ]
        }
      },
      {
        "condition": "query.block_property('minecraft:direction') == 1",
        "components": {
          "minecraft:rotation": [ 90, 0, 0 ]
        }
      },
      {
        "condition": "query.block_property('minecraft:direction') == 2",
        "components": {
          "minecraft:rotation": [ 0, 0, -90 ]
        }
      }
    ],
    "components": {
      "minecraft:creative_category": {
        "category": "construction",
        "group": "itemGroup.name.stoneBrick"
      },
      "minecraft:unit_cube": {},
      "minecraft:material_instances": {
        "up": {
          "texture": "aurora_pillar_top",
          "render_method": "alpha_test"
        },
        "down": {
          "texture": "aurora_pillar_top",
          "render_method": "alpha_test"
        },
        "*": {
          "texture": "aurora_pillar_side",
          "render_method": "alpha_test"
        }
      },
      "minecraft:destroy_time": 7.5,
      "minecraft:block_light_absorption": 15,
      "minecraft:block_light_emission": 0,
      "minecraft:explosion_resistance": 6,
      "minecraft:on_player_placing": {
        "event": "minecraft:on_player_placing",
        "target": "self"
      }
    },
    "events": {
      "minecraft:on_player_placing": {
        "set_block_property": {
          "minecraft:direction": "math.floor(query.block_face / 2)"
        }
      }
    }
  }
}