{
  "format_version": "1.8.0",
  "render_controllers": {
    "controller.render.lich": {
      "geometry": "Geometry.default",
      "materials": [ { "*": "Material.default" } ],
      "textures": [ "Texture.default" ],
      "part_visibility": [
        { "shields": "query.skin_id" },
        { "shield_1": "query.skin_id >= 1" },
        { "shield_2": "query.skin_id >= 2" },
        { "shield_3": "query.skin_id >= 3" },
        { "shield_4": "query.skin_id >= 4" },
        { "shield_5": "query.skin_id >= 5" }
      ],
      "overlay_color": {"r": 0,"g": 0,"b": 0,"a": "query.variant == -1 ? 0.75 : 0"},
      "is_hurt_color" : {"r": 1,"g": 0,"b": 0,"a": "query.variant > 2 ? 0 : 0.5"}
    }
  }
}