{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.lich.equipment": {
      "states": {
        "default": {
          "transitions": [
            { "Shield": "query.variant == 1" },
            { "UltimateBattle": "query.variant == 2" }
          ]
        },
        "Shield": {
          "transitions": [
            { "default": "query.variant != 1" }
          ],
          "on_entry": [
            "/replaceitem entity @s slot.weapon.mainhand 0 twilightforest:scepter_twilight"
          ]
        },
        "UltimateBattle": {
          "transitions": [
            { "default": "query.variant != 2" },
            { "Zombie": "query.mark_variant == 1" },
            { "Sword": "query.mark_variant == 2" }
          ]
        },
        "Zombie": {
          "transitions": [
            { "UltimateBattle": "query.mark_variant != 1" }
          ],
          "on_entry": [
            "/replaceitem entity @s slot.weapon.mainhand 0 twilightforest:scepter_zombie"
          ]
        },
        "Sword": {
          "transitions": [
            { "UltimateBattle": "query.mark_variant != 2" }
          ],
          "on_entry": [
            "/replaceitem entity @s slot.weapon.mainhand 0 golden_sword"
          ]
        }
      }
    }
  }
}